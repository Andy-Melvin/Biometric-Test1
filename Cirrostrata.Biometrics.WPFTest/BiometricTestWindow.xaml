<Window x:Class="Cirrostrata.Biometrics.WPFTest.BiometricTestWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="BiometricTestWindow" Height="293" Width="373" Closing="Window_Closing">
    <DockPanel Margin="8" >
        <Button Name="Close" DockPanel.Dock="Bottom" Width="64" Click="Close_Click">_Close</Button>
        <StackPanel>
            <Label Margin="0,0,0,12">Swipe your finger over the fingerprint sensor</Label>
            <Label>Status</Label>
            <TextBox Name="Status"></TextBox>
            <Label>User Name</Label>
            <TextBox Name="UserName"></TextBox>
        </StackPanel>
    </DockPanel>
</Window>
